<div class="box <%= card.category.name %> <%= card.city.name %>">
	<%= link_to (image_tag card.image(:medium)), card %>
	<p class="description">
		<hr style="margin-top: 1px; margin-bottom: 10px;">
		<%= card.description %>
	</p>
	<p>
			<strong>
			Added by <%= link_to card.user.name, card.user %>
			</strong>
	</p>
	  <% if current_user == card.user %>
		  <%= link_to 'Edit', edit_card_path(card) %>
		  <%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
</div>