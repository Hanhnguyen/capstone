<div class="box">
	<%= link_to (image_tag card.image(:medium)), card %>
	<p class="description">
		<%= card.description %>
	</p>
	<p>
			<strong>
				Posted by <%= link_to card.user.name, card.user %>
			</strong>
	</p>
	  <% if current_user == card.user %>
		  <%= link_to 'Edit', edit_card_path(card) %>
		  <%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
</div>